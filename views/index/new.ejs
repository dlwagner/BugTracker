<h2>New Bug</h2>
<form action="/" method="POST">
    <label>Title</label>
    <input type="text" name="title" value="<%= bug.title %>">
    <label>Description</label>
    <textarea name="description"><%= bug.description %></textarea>
    <a href="/">Cancel</a>
    <button type="submit">Create</button>
</form>