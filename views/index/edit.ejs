<div class="container-sm mt-5">
  <h2 class="mb-3 text-center">Edit Bug Report</h2>
  <form action="/<%= bug.id %>?_method=PUT" method="POST">
    <div class="row">
      <div class="col-lg-3"></div>
        <div class="col-lg-4">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= bug.title %>">
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="textarea" class="form-control" id="description" name="description"><%= bug.description %></textarea>
          </div>
          <!-- This doens't work. First file delete button just redirects to details page. Second file delete button 
            goes to deletefile route.
          <div>
            <% //for(var i=0; i<bug.bugFiles.length; i++) { %>
              <a href="/<%= //bug.bugFiles[i]._id %>/download"><%= //bug.bugFiles[i].fileName %></a>
              <form class="mt-3" method="POST" action="/<%= //bug.id %>/deletefile?_method=DELETE">
                <button type="submit">Delete</button>
              </form>
            <% //} %>
          </div>
          -->
          <div>
            <label for="files" class="form-label">Add Supporting Files</label>
            <input type="file" id="files" name="files" class="filepond form-control" multiple data-allow-reorder="true" data-max-file-size="15MB" data-max-files="3">
          </div>
          <a href="/<%= bug.id %>">Cancel</a>
          <button type="submit">Update</button>
        </div>
        <div class="col-lg-2">
          <div class="mb-3">
            <label for="category">Category</label>
              <select class="form-select" id="category" name="category">
                <option value="">--Please choose a category--</option>
                <option value="Bug" <%=bug.category==='Bug' ? 'selected' : '' %>>Bug</option>
                <option value="Feature" <%=bug.category==='Feature' ? 'selected' : '' %>>Feature</option>
                <option value="Maintenance" <%=bug.category==='Maintenance' ? 'selected' : '' %>>Maintenance</option>
              </select>
          </div>
          <div class="mb-3">
            <label>Status</label>
              <select class="form-select" name="status">
                <option value="">--Please choose a Status--</option>
                <option value="New" <%=bug.status==='New' ? 'selected' : '' %>>New</option>
                <option value="Assigned" <%=bug.status==='Assigned' ? 'selected' : '' %>>Assigned</option>
                <option value="In-progress" <%=bug.status==='In-progress' ? 'selected' : '' %>>In-progress</option>
                <option value="Closed" <%=bug.status==='Closed' ? 'selected' : '' %>>Closed</option>
              </select>
          </div>
          <div class="mb-3">
            <label>Priority</label>
              <select class="form-select" name="priority">
                <option value="">--Please choose a Priority--</option>
                <option value="Low" <%=bug.priority==='Low' ? 'selected' : '' %>>Low</option>
                <option value="Medium" <%=bug.priority==='Medium' ? 'selected' : '' %>>Medium</option>
                <option value="High" <%=bug.priority==='High' ? 'selected' : '' %>>High</option>
              </select>
          </div>
        </div>
      <div class="col-lg-3"></div>  
    </div>
  </form>
</div>